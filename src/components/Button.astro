---
interface Props {
  type: "button" | "submit";
}

const { type } = Astro.props;
---

<button type={type}>
  <span class="label">
    <slot />
  </span>
</button>
<style>
  button {
    display: block;
    position: relative;
    cursor: pointer;
    margin-top: 16px;
    /* background: var(--dlh-theme-color-primary-gradient, --color-primary); */
    border: none;
    border-radius: var(--dlh-theme-shape-corner-small);
    background-color: var(--dlh-theme-color-primary);
    padding: 0 16px;
    height: 40px;
    color: var(--dlh-theme-color-on-primary);
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0.01pt;
  }
  button .label {
    display: block;
    position: relative;
    z-index: 1;
  }
  button::after {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;

    transition: opacity var(--dlh-theme-motion-easing-standard)
      var(--dlh-theme-motion-duration-short);
    border-radius: var(--dlh-theme-shape-corner-small);
    background-color: var(--dlh-theme-color-on-surface);
    width: 100%;
    height: 100%;
    /* border-radius: var(--dlh-theme-shape-corner-full); */
    content: "";
  }
  button:hover::after {
    opacity: 0.12;
  }
</style>

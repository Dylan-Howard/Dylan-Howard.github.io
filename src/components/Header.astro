---
import Typography from "@components/Typography.astro";

interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<header class="container">
  <Typography
    component="h1"
    size="medium"
    variant="headline"
    bottomGutter="small"
  >
    {title}
  </Typography>
  <Typography
    component="span"
    color="on-surface-variant"
    size="small"
    variant="headline"
    bottomGutter="medium"
  >
    {subtitle}
  </Typography>
  <Typography size="large" variant="body">
    I craft
    <Typography component="span" color="emphasis" size="large" variant="body">
      data-driven full-stack
    </Typography>
     applications with a focus on
    <Typography component="span" color="emphasis" size="large" variant="body">
      identity and access
    </Typography>.
  </Typography>
</header>

<style>
  header {
    margin: 64px auto 48px;
    max-height: 60vh;
  }
</style>

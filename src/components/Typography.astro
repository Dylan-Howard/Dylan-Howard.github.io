---
interface Props {
  bottomGutter?: "small" | "medium";
  color?: "emphasis" | "on-surface" | "on-surface-variant" | "primary";
  component?: "h1" | "h2" | "h3" | "span" | "p";
  size?: "extra-large" | "large" | "medium" | "small";
  variant?: "display" | "title" | "headline" | "body" | "label";
}

const {
  bottomGutter,
  color = "on-surface",
  component = "p",
  size = "medium",
  variant = "body",
} = Astro.props;
const Component = component;
---

<Component
  class={`${variant}-${size} ${color} ${
    bottomGutter ? `bottom-gutter-${bottomGutter}` : ""
  }`}
>
  <slot />
</Component>

<style>
  h1,
  h2,
  h3,
  p,
  span {
    margin: 0;
  }
  .bottom-gutter-small {
    margin-bottom: var(--dlh-theme-shape-margin-small);
  }
  .bottom-gutter-medium {
    margin-bottom: var(--dlh-theme-shape-margin-medium);
  }
  span.bottom-gutter-small,
  span.bottom-gutter-medium {
    display: block;
  }
  .emphasis {
    background: #1d1d1f;
    background-clip: text;
    -webkit-text-fill-color: rgba(0, 0, 0, 0);
    -webkit-box-decoration-break: clone;
    box-decoration-break: clone;
    background-image: linear-gradient(
      108deg,
      var(--dlh-theme-color-accent-gradient-1),
      var(--dlh-theme-color-accent-gradient-2) 34%,
      var(--dlh-theme-color-accent-gradient-3) 68%,
      var(--dlh-theme-color-accent-gradient-4)
    );
  }
  .on-surface {
    color: var(--dlh-theme-color-on-surface);
  }
  .on-surface-variant {
    color: var(--dlh-theme-color-on-surface-variant);
  }
  .primary {
    color: var(--dlh-theme-color-primary);
  }

  .title-large {
    font-weight: var(--dlh-theme-typescale-title-l-font-weight);

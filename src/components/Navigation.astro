<style>
    nav {
        height: 48px;
        margin: 16px auto 0;
    }

    nav a {
        display: block;
        height: 32px;
        width: 32px;
        fill: var(--color-on-surface-variant);

        transition: fill var(--motion-easing-standard) var(--motion-duration-medium);;
    }
    nav a:hover { fill: var(--color-on-surface-variant); }

    nav > ul { margin: 0; }

    nav > ul > li {
        padding: 0;
        list-style: none;
    }

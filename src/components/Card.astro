---
const {
    description,
    link,
    imgSource,
    imgAlt,
    title,
    supportingText,
} = Astro.props;
---

<a class="card br-xl" href={link}>
    <img class="fill-bg" src={imgSource} alt={imgAlt} />
    <h3>{title}</h3>
    <p>{description}</p>
    <p class="supporting-text">{supportingText}</p>
</a>

<style>
    .card {
        background: var(--color-surface-container);
        border-radius: var(--shape-corner-medium);
        box-sizing: border-box;
        cursor: pointer;
        padding: 1rem;
        position: relative;

        text-decoration: none;

        box-shadow: var(--tile-shadow);
        transition: box-shadow var(--motion-easing-standard) var(--motion-duration-long);
    }
    .card:hover { box-shadow: var(--tile-shadow-hover); }

    .card::after {
        border: solid var(--shape-border-width) transparent;
        border-radius: var(--shape-corner-medium);
        background: conic-gradient(from 45deg, var(--color-accent-gradient-1), var(--color-accent-gradient-2), var(--color-accent-gradient-3), var(--color-accent-gradient-1)) border-box;
        content: "";
        height: calc(100% - (var(--shape-border-width) * 2));
        width: calc(100% - (var(--shape-border-width) * 2));
        opacity: 0;

        position: absolute;
        top: 0;
        left: 0;

        -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
        mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;

        transition: opacity var(--motion-easing-standard) var(--motion-duration-long);
    }
    .card:hover::after { opacity: 1; }

    .card img {
        box-sizing: border-box;
        height: auto;
        width: auto;
        max-height: 80px;
        max-width: 160px;
        margin-bottom: 8px;
        padding: 4px;
    }

    .card img.fill-bg {
        background: var(--color-tertiary);
        border-radius: 8px;
    }

    .card h3 {
        color: var(--color-on-surface);
        font-size: 20px;
        font-weight: 600;
        line-height: 24px;
        margin: 0;
        margin-bottom: 8px;
    }
    .card p {
        color: var(--color-on-surface-variant);
        font-size: 1rem;
        line-height: 1.4rem;
        margin: 0;
        margin-bottom: 8px;
    }
    .card p.supporting-text { color: var(--color-on-surface-variant); }
</style>